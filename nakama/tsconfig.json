{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
